#set($imageWidth = $maxImageWidth.Data)
#set($imageHeight = $maxImageHeight.Data)
#set($imageWidthPx = $imageWidth + "px")
#set($imageHeightPx = $imageHeight + "px")
#set($interval = $timeInterval.Data)
#set($activeIndexValue = $activeIndex.Data)
 
<style type="text/css">
    .aui .carousel {
        -webkit-user-select: none;
        -moz-user-select: none;
        user-select: none;
        margin-top: 15px;
    }
    .aui .carousel-item {
        opacity: 0;
    }
    .aui .carousel li {
        margin: 0 !important;
    }
    .aui img {
        height: 100%
    }

    #shadowimg{
        height: auto;
        width: auto;
        margin-top: -22px;
    }
    
    #test{
        padding: 5px 0 15px 0;
        text-align: center;
        background: url("http://business-theme.techsaran.com/sites/all/themes/business/images/slide-shadow.png") center -7px no-repeat;
        z-index: 100;
        width: 940px;
        height: 50px;
        margin-top: -20px;
    }
</style>
 
#set($totalCount = 0)

<div id="myCarousal">
	#foreach($item in $items.getSiblings())
		#if ($item.linkUrl.data != "")
			<a href="$imageElement.linkUrl.Data">
				<img class="carousel-item" src="$item.image.data" height="$imageHeightPx !important" width="$imageWidthPx" />
			</a>
		#else
			<img class="carousel-item" src="$item.image.data" height="$imageHeightPx" width="$imageWidthPx" />
		#end
		#set($totalCount = $totalCount + 1)
	#end
</div>
<div id="test"></div>

#if($totalCount > 0)
	<script>
		AUI().ready('aui-carousel', function(A) 
		{ 
			var carousel = new A.Carousel(
			{ 
				contentBox: '#myCarousal', 
				activeIndex: $activeIndexValue,
				intervalTime: $interval, 
				width: $imageWidth, 
				height: $imageHeight 
			}).render(); 
		});
	</script>
#end